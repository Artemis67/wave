{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es6",
    ],
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "jsx": "preserve",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}